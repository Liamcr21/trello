{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

<main class="login-form" style="margin-top:10%;">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">Inscription Trello NWS</div>
                    <div class="card-body">
    {{ form_start(registrationForm) }}
       <div class="form-group row">
        {{ form_row(registrationForm.email) }}
        </div>
        <div class="form-group row">
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        </div>
        <div class="form-group row">
        {{ form_row(registrationForm.agreeTerms, { 
            label: 'Accepter les conditions'
        }) }}
        </div>

        <button type="submit" class="btn btn-success">S'enregistrer</button>
               <a href="{{ path('app_login') }}" class="btn btn-info">Login</a>

    {{ form_end(registrationForm) }}
                    </div>
                    
            </div>
        </div>
    </div>
    </div>

</main>
{% endblock %}
