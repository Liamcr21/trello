{% extends 'base.html.twig' %}

{% block title %}Board{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">[{{ board.id }}] - {{ board.boardName }}</h1>
         <hr>                                                                                                                                                                                 </h1>
    <div class="row">
        {% for taskList in taskLists %}
            <div class="col-sm-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ taskList.taskListName }}</h5>
                        <hr>
                         <ul>
                            {% for task in taskList.task %}
                            <li>{{ task.taskName }}</li>
                        {% endfor %}
                    </ul>
                    <hr>
                </div>
            </div>
        </div>
    {% endfor %}
</div>







<hr>
    <a class="btn btn-success" href="{{ path('app_board_index') }}">Retour a la liste des tableaux</a>

    <a class="btn btn-warning" href="{{ path('app_board_edit', {'id': board.id}) }}">Modifier le tableau</a>

    {{ include('board/_delete_form.html.twig') }}
    </div>

{% endblock %}
