{% extends 'base.html.twig' %}

{% block title %}Board{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center">[{{ board.id }}] - {{ board.boardName }}</h1>
         <hr> 
               <a class="btn btn-info" href="{{ path('app_task_list_new') }}">Ajouter une TaskList</a>

            <br>  
            <br>                                                                                                                                                                      </h1>
    <div class="row">
        {% for task_list in task_lists %}
            <div class="col-sm-4">  
<div class="card mb-3">
    <div class="card-body">
        <h5 class="card-title">{{ task_list.taskListName }}</h5> 
        {{ include('task_list/_delete_form.html.twig') }}
        <a class="btn btn-sm btn-outline-warning" href="{{ path('app_task_list_edit', {'id': task_list.id}) }}">Modifier</a>  
 
        <hr>
        <ul>
            {% for task in task_list.task %}
                <li>{{ task.taskName }} <a class="btn btn-sm btn-outline-warning" href="{{ path('app_task_edit', {'id': task.id}) }}">Modifier</a> 
                       {{ include('task/_delete_form.html.twig') }}<br>
                <p class="text-muted">- {{ task.description }}</p></li>
            {% endfor %}
        </ul>
        <hr>
        <a class="btn btn-success" href="{{ path('app_task_new') }}">Ajouter une Task</a>    
 
    </div>
</div>

        </div>
    {% endfor %}
</div>







<hr>
    <a class="btn btn-success" href="{{ path('app_board_index') }}">Retour a la liste des tableaux</a>

    <a class="btn btn-warning" href="{{ path('app_board_edit', {'id': board.id}) }}">Modifier le tableau</a>

    {{ include('board/_delete_form.html.twig') }}
    </div>

{% endblock %}
